# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

GET     /menu                        controllers.HomeController.gameMenu()

GET     /menu_choice/:id             controllers.HomeController.handleChoice(id: Int)

GET     /playernumber/:id            controllers.HomeController.enterPlayerNumber(id: Int)

GET     /player_names/:name1/:name2/:name3      controllers.HomeController.createPlayers(name1: String, name2: String, name3: String)

GET     /ingame                      controllers.HomeController.ingame()

GET     /play_round                  controllers.HomeController.playRound()

GET     /play_round_8                controllers.HomeController.playRound8()

POST    /input                       controllers.HomeController.offer()
GET     /input/empty                 controllers.HomeController.offerEmpty()

GET     /demo_input/:input           controllers.HomeController.demoOffer(input: String)

GET     /theme/toggle                controllers.ThemeController.toggleTheme(returnTo: String ?= "/menu")