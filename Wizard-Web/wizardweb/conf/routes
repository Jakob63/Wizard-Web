GET     /playernumber/:id            controllers.HomeController.enterPlayerNumber(id: Int)

GET     /create_players              controllers.HomeController.createPlayers()

GET     /ingame                      controllers.HomeController.ingame()

GET     /play_round                  controllers.HomeController.playRound()

