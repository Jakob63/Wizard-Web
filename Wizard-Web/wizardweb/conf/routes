# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

GET     /                           controllers.HomeController.index()

# von /public to assets
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

GET     /menu                       controllers.HomeController.gameMenu()

GET     /ingame                     controllers.HomeController.ingame()

GET     /demo_input/:input          controllers.HomeController.demoOffer(input: String)

GET     /theme/toggle               controllers.ThemeController.toggleTheme(returnTo: String ?= "/home")

GET     /home                       controllers.HomeController.home()

GET     /rules                      controllers.HomeController.rules()

POST    /createPlayers              controllers.HomeController.createPlayers()